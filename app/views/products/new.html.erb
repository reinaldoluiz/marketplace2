<%= form_with model: @product, local: true do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <%= f.label :price%>
    <%= f.number_field :price, min: 0%>
    <%= f.label :description%>
    <%= f.text_area :description%>
    <%= f.label :image, 'Imagem'%>
    <%= f.file_field :image%>
    <%= f.submit 'Enviar'%>
<% end %>